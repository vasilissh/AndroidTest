<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidTest.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label Text="New .NET MAUI page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="NewPageBtn"
            Text="NewPage" 
            SemanticProperties.Hint="Shows new page"
            Clicked ="NewPageBtn_Clicked"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>